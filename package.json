{
  "name": "backend",
  "version": "0.0.1",
  "private": "true",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run prestart && node -r dotenv/config -r source-map-support/register .",
    "prestart": "prisma migrate deploy --schema=./src/database/prisma/schema.prisma",
    "dev": "npm run prestart && ts-node-dev --respawn -r dotenv/config -r source-map-support/register src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "db:generate": "prisma generate --schema=./src/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./src/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@sendgrid/mail": "^8.1.3",
    "@typegoose/typegoose": "^12.10.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-bearer-token": "^2.4.0",
    "form-data": "^4.0.0",
    "formidable": "^3.5.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "ramda": "^0.29.0",
    "source-map-support": "^0.5.21",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/formidable": "^3.4.0",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/ramda": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "3.0.0",
    "prisma": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
